<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="200dp" android:height="200dp"/>
        </shape>
    </item>
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:startColor="@color/gray" android:endColor="@color/gray"/>
        </shape>
    </item>
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#fff" android:endColor="#fff"/>
        </shape>
    </item>

</layer-list>